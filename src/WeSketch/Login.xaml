<Page x:Class="WeSketch.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WeSketch"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Login">
    <Grid>
        <DockPanel LastChildFill="False" Background="White">
            <StackPanel DockPanel.Dock="Top" VerticalAlignment="Center" HorizontalAlignment="Center" >
                <TextBlock FontWeight="ExtraBold">WeSketch</TextBlock>
                <TextBlock>User Name:</TextBlock>
                <TextBox Name="userNsme"></TextBox>
                <TextBlock>Password:</TextBlock>
                <PasswordBox Name="password"></PasswordBox> 
                <Button Name="buttonLogin" Content="Login" Click="buttonLogin_Click"/>
                <Button Name="buttonRegister" Content="Register New User" Click="buttonRegister_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>

</Page>
