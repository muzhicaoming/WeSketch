<Page x:Class="WeSketch.WeSketchApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeSketch"
        mc:Ignorable="d"
        Title="WeSketch" Height="420.812" Width="999.514" Background="#FF9E9696">
    <Grid Margin="19,-1,-11,21" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.011"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Viewbox Margin="-19,0,148,-13" Stretch="Uniform">
            <InkCanvas Margin="189,10,149,0" VerticalAlignment="Top" Name= "mainInkCanvas" Width="1816" Height="880" />
        </Viewbox>
        <Button Content="Invite" HorizontalAlignment="Left" Margin="894,10,0,0" VerticalAlignment="Top" Width="75" Name= "inviteButton"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="894,35,0,0" VerticalAlignment="Top" Width="75" Name= "clearButton"/>
        <Button Content="Leave" HorizontalAlignment="Left" Margin="894,60,0,0" VerticalAlignment="Top" Width="75" Name= "leaveButton"/>
        <ComboBox HorizontalAlignment="Left" Margin="849,115,0,0" VerticalAlignment="Top" Width="120" Name="comboColor" SelectionChanged="comboColor_SelectionChanged">
            <ComboBoxItem IsSelected="True" Content="Black"/>
            <ComboBoxItem Content="Red"/>
            <ComboBoxItem Content="Green"/>
            <ComboBoxItem Content="Blue"/>
            <ComboBoxItem Content="Yellow"/>
        </ComboBox>

        <Label Content="Color:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="849,84,0,0" Name="colorLabel"/>
    </Grid>
</Page>